<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.MaterialComponents"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorTerminalBackground"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="188dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:layout_marginBottom="5dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_GPS">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_gps_fixed_24px"
                    android:textAlignment="center"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCardLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/null_value"
                    android:textColor="@color/card_GPS_text" />

                <TextView
                    android:id="@+id/textCardLocationTime"
                    android:layout_width="120sp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="@string/null_value"
                    android:textAlignment="center"
                    android:textColor="@color/card_GPS_text" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:layout_marginBottom="5dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_LT">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[LT]"
                    android:textAlignment="center"
                    android:textColor="@color/card_LT_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCardLT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/null_value"
                    android:textColor="@color/card_LT_text" />
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:layout_marginBottom="5dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_LC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[LC]"
                    android:textAlignment="center"
                    android:textColor="@color/card_LC_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCardLC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:padding="5dp"
                    android:text="@string/null_value"
                    android:textColor="@color/card_LC_text" />
                <ImageView
                    android:id="@+id/left_footprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:visibility="gone"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_left_footprint"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardLK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:layout_marginBottom="5dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_LK">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[LK]"
                    android:textAlignment="center"
                    android:textColor="@color/card_LK_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCardLK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/null_value"
                    android:textColor="@color/card_LK_text" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:layout_marginBottom="5dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_RT">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[RT]"
                    android:textAlignment="center"
                    android:textColor="@color/card_RT_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCardRT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/null_value"
                    android:textColor="@color/card_RT_text" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:layout_marginBottom="5dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_RC">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[RC]"
                    android:textAlignment="center"
                    android:textColor="@color/card_RT_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCardRC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_weight="0.8"
                    android:text="@string/null_value"
                    android:textColor="@color/card_RC_text" />
                <ImageView
                    android:id="@+id/right_footprint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_weight="0.2"
                    android:layout_gravity="center_vertical|end"
                    android:src="@drawable/ic_right_footprint"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardRK"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/mtrl_card_spacing"
            android:layout_marginTop="@dimen/mtrl_card_spacing"
            android:layout_marginRight="@dimen/mtrl_card_spacing"
            android:layout_marginBottom="5dp"
            android:minHeight="50dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/card_RK">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="55sp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="[RK]"
                    android:textAlignment="center"
                    android:textColor="@color/card_RK_text"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textCardRK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/null_value"
                    android:textColor="@color/card_RK_text" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


